<div class="col-md-12">
  <div class="group">
    <%= link_to("新建项目", new_project_path, class: "btn btn-primary pull-right") %>
  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <td>#</td>
        <td>名称</td>
        <td>描述</td>
      </tr>
    </thead>
    <tbody>
      <% @projects.each do |project| %>
        <tr>
          <td>#</td>
          <td><%= link_to(project.name, project_path(project)) %></td>
          <td><%= project.remark %></td>
          <td>
              <%= link_to("编辑", edit_project_path(project), class: "btn btn-sm btn-default")%>
              <%= link_to("删除", project_path(project),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
