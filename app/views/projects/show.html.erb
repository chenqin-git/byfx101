<div class="col-md-12">
  <div class="group">
    <span class="pull-right">
      <% if current_user && current_user.is_member_of?(@project) %>
        <label class="label label-success">项目成员</label>
      <% else %>
        <label class="label label-warning">非项目成员</label>
      <% end %>
    </span>

    <% if current_user && current_user == @project.user %>
      <%= link_to("添加产品", new_project_product_path(@project), class: "btn btn-default pull-right") %>
      <%= link_to("编辑项目", edit_project_path(@project), class: "btn btn-primary pull-right") %>
    <% end %>
  </div>
  <h2><%= @project.name %></h2>
  <p><%= @project.remark %></p>

  <table class="table">
  <thead>
    <tr>
      <th>产品名称</th>
      <th>描述</th>
      <th>更新时间</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.remark %></td>
        <td><%= product.updated_at %></td>
        <td>
          <% if current_user && current_user == @project.user %>
            <%= link_to("编辑", edit_project_product_path(@project,product), class: "btn btn-sm btn-default") %>
            <%= link_to("删除", project_product_path(@project,product), class: "btn btn-sm btn-default", method: :delete, data: { confirm: "Are you sure?" }) %>
          <% end %>

          <%= link_to("购买", edit_project_product_path(@project,product), class: "btn btn-sm btn-primary") %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
