<div class="col-md-12">
  <h2>我的订单</h2>
  <div class="group">

  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>编号</th>
        <th>产品</th>
        <th>单价</th>
        <th>数量</th>
        <th>参数</th>
        <th>总价</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>#</td>
          <td><%= link_to(order.id, account_order_path(order)) %></td>
          <td><%= order.product.name %></td>
          <td><%= order.product.calculate_agent_price!(order.user) %></td>
          <td><%= order.num %></td>
          <td><%= order.input %></td>
          <td><%= order.calculate_amount! %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="text-center">
  <%= will_paginate @posts %>
</div>
