<div class="col-md-12">
  <h2>我的消费记录</h2>
  <div class="group">

  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>交易时间</th>
        <th>交易金额</th>
        <th>交易类型</th>
        <th>交易对象</th>
        <th>操作者</th>
        <th>余额</th>
        <th>备注</th>
      </tr>
    </thead>
    <tbody>
      <% @account_books.each do |account_book| %>
        <tr>
          <td>#</td>
          <td><%= account_book.created_at %></td>
          <td><%= account_book.amount %></td>
          <td><%= account_book.show_transaction_type! %></td>
          <td>
            <% if account_book.transaction_type == 1 %>
              <%= account_book.deposit_reference_no %>
            <% elsif [2,3].include?(account_book.transaction_type)  %>
              <%= link_to("订单 #{account_book.order_id}", admin_orders_path) %>
            <% else %>
              未知交易
            <% end %>
          </td>
          <td><%= account_book.operator %></td>
          <td><%= account_book.balance %></td>
          <td><%= account_book.remark %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="text-center">
  <%= will_paginate @account_books %>
</div>
