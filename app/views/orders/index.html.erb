<div class="col-md-12">
  <h2>订单管理</h2>
  <div class="group">

  </div>
  <table class="table table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>编号</th>
        <th>产品</th>
        <th>数量</th>
        <th>创建时间</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @orders.each do |order| %>
        <tr>
          <td>#</td>
          <td><%= link_to(order.id, order_path(order)) %></td>
          <td><%= order.product.name %></td>
          <td><%= order.num %></td>
          <td><%= order.created_at %></td>
          <td>
              <%= link_to("编辑", edit_order_path(order), class: "btn btn-sm btn-default")%>
              <%= link_to("删除", order_path(order),    class: "btn btn-sm btn-default",
                          method: :delete, data: { confirm: "Are you sure?" } )%>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
