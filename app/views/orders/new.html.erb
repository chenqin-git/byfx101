<h2 class="text-center">购买产品：<%= @product.name %></h2>
<hr>
<div class="col-md-4 col-md-offset-4">
  <%= simple_form_for [@product, @order] do |f| %>
    <div class="form-group">
      <%= f.input :num, input_html: { class: "form-control"} %>
      <%= f.label @product.remark %>
      <%= f.text_field :input, input_html: { class: "form-control"} %>
      <p><%= simple_format(@product.remark) %></p>
    </div>
    <div class="form-actions">
      <%= f.submit "提交", disable_with: "提交中...", class: "btn btn-primary"%>
    </div>
  <% end %>
</div>
